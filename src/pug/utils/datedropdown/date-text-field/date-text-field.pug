include ../text-field/text-field
include ../../heading/heading
include ../../material-icons/material-icons

mixin date-text-field({ header = 'date dropdown', type = 'start', placeholder, width, } = {})
  - let widthModifier

  case width
    when 'wide'
      - widthModifier = 'date-text-field__input_width_wide'

  .date-text-field.date-text-field--margin-top
    +heading({typetag: 3, text: header, classmodify: 'date-text-field__title modf__font-family--open-sans modf__font-weight--bold modf__text--h3 modf__color--darkshade100'})
    .date-text-field__input(class = widthModifier)
      .date-text-field__keyboard-arrow
        +material-icons({
          type: 'keyboard_arrow_down', 
        })
      div(class=`date-text-field__input-${type}-date js-date-text-field__input-${type}-date`)
        +text-field({
          type: 'text',
          readonly: 'readonly',
          theme: 'dark',
          isClickable: true,
          placeholder,
        })
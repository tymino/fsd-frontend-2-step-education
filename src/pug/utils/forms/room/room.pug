include ../../rate-buttons/rate-buttons

mixin room({number='001', luxury=false, cost='5000', reviewcount='0'}={})
  .room__container
    .room__wrapper-room-select
      img.room__image(src=`./img/room${number}.jpg`, alt="room")
      .room__arrow-left chevron_left
      .room__arrow-right chevron_right
      .room__circle-wrapper
        .circle.circle--active
        .circle
        .circle
        .circle

    .room__info-room
      +info-room({
        number: number,
        luxury: luxury,
        cost: cost
      })
    .room__decorate-line
    .room__wrapper-review
      +rate-buttons()
      .room__review-count= `${reviewcount} Отзывов`


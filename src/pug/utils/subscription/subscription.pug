include ../heading/heading
include ../material-icons/material-icons

mixin subscription({type = 'text', name, placeholder, istitle = false, texttitle} = {})
  .column1__subscription.subscription.subscription--margin-top
    if istitle
      +heading({typetag: 3, text: `${texttitle}`, classmodify: 'subscription__title modf__font-family--open-sans modf__font-weight--bold modf__text--h3 modf__color--darkshade100'})
      input(
        class=`subscription__input js-subscription__input-${type} modf__font-family--open-sans modf__font-weight--normal`
        type=type,
        name=name,
        placeholder=placeholder
      )
      .subscription__arrow_forward
        +material-icons({ type: 'arrow_forward' })
    else
      input(
        class=`subscription__input js-subscription__input-${type} modf__font-family--open-sans modf__font-weight--normal`
        type=type,
        name=name,
        placeholder=placeholder
      )
      .subscription__arrow_forward
        +material-icons({ type: 'arrow_forward' })
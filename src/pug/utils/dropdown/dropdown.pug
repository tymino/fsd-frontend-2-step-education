include ../heading/heading
include ./selectcount/selectcount

mixin dropdown({type = 'text', name, row, placeholder, istitle = false, texttitle} = {})
  .column1__dropdown.dropdown.dropdown--margin-top
    if istitle
      +heading({typetag: 3, text: `${texttitle}`, classmodify: 'dropdown__title modf__font-family--open-sans modf__font-weight--bold modf__text--h3 modf__color--darkshade100'})
      input(
        disabled
        class=`dropdown__input js-dropdown__input-${type} modf__font-family--open-sans modf__font-weight--normal`
        type=type,
        name=name,
        placeholder=placeholder
      )
      div(class=`dropdown__arrow-down dropdown__arrow-down-${type}`)
        +material-icons({
          type: 'keyboard_arrow_down', 
        })
      div(class=`dropdown__drop-menu dropdown__drop-menu-${type}`)
        +selectcount({blockname: 'drop-menu', name: name[0], row: row[0]})
        +selectcount({blockname: 'drop-menu', name: name[1], row: row[1]})
        +selectcount({blockname: 'drop-menu', name: name[2], row: row[2]})
        +selectcount({blockname: 'drop-menu', row: row[2], isBtn: true, visibleReset: ''})

    else
      input(
        class=`dropdown__input js-dropdown__input-${type} modf__font-family--open-sans modf__font-weight--normal`
        type=type,
        name=name,
        placeholder=placeholder
      )
      .date-text-field__keyboard-arrow
        +material-icons({
          type: 'keyboard_arrow_down', 
        })
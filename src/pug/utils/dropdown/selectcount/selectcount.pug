include ../../heading/heading

mixin selectcount({blockname, texttitle} = {})
  div(class=`${blockname}__selectcount`).selectcount
    +heading({typetag: 3, text: texttitle, classmodify: `selectcount__title modf__font-family--open-sans modf__font-weight--bold modf__text--h3 modf__color--darkshade100`})
    .selectcount__wrapper
      button(class= `selectcount__btn selectcount__btn-${texttitle}-minus`) -
      +heading({typetag: 3, text: '0', classmodify: `selectcount__count modf__font-family--open-sans modf__font-weight--bold modf__text--h3 modf__color--darkshade100`})
      button(class= `selectcount__btn selectcount__btn-${texttitle}-plus`) +
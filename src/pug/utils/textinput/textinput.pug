mixin textinput({classname, type = 'text', name, placeholder, istitle = false, texttitle} = {})
  .input-text.column1__input-email
    if istitle
      .input-text__tile.modf__font-family--open-sans.modf__font-weight--bold.modf__text--h3.modf__color--darkshade100= texttitle
      input(
        class=`input-text__input`
        type=type,
        name=name,
        placeholder=placeholder
      )
    else
      input(
        class=`input-text__input`
        type=type,
        name=name,
        placeholder=placeholder
      )
extends ../../layout/ui-kit

include ../../utils/logo-ui-kit/logo-ui-kit
include ../../utils/textinput/textinput
include ../../utils/dropdown/dropdown
include ../../utils/subscription/subscription
include ../../utils/checkbox/checkbox

//- include ../../utils/text-field/text-field.pug
include ../../utils/datedropdown/filter-date/filter-date



block variables
  - var pageTitle = 'Form Elements';
  - var pageDescription = 'Form Elements. Task 2';

block content
  .ui-kit__logo-wrapper
    +logoimg()
  .ui-kit__container
    section.container__column1
      +textinput({
        type: 'email',
        name: 'email',
        placeholder: 'Email',
        istitle: true,
        texttitle: 'Text Field'
      })
      +dropdown({
        type: 'guess',
        name: 'text',
        placeholder: 'Сколько гостей',
        istitle: true,
        texttitle: 'Dropdown',
        name: ['взрослые', 'дети', 'младенцы'],
        row: [1, 2, 3]
      })
      +textinput({
        type: 'date',
        name: 'date',
        placeholder: 'дд.мм.гггг',
        istitle: true,
        texttitle: 'masked text field'
      })
      +filter-date({ inputFieldType: 'range', firstHeader: 'date Dropdown', secondHeader: 'date Dropdown', })
      +filter-date({ firstHeader: 'filter date dropdown', })
      +subscription({
        type: 'text',
        name: 'subscription',
        placeholder: 'Email',
        istitle: true,
        texttitle: 'subscription text field'
      })
      //- rewrite, add options for drop-menu
      +dropdown({
        type: 'bed',
        name: 'text',
        placeholder: 'Сколько спален',
        istitle: true,
        texttitle: 'Dropdown',
        name: ['спальни', 'кровани', 'ванные'],
        row: [11, 12, 13]
      })
    section.container__column2
      +checkbox({blockName: 'column2__checkbox-buttons', arrayItems: ['Можно курить', 'Можно с питомцами', 'Можно пригласить гостей (до 10 человек)']})
    section.container__column3
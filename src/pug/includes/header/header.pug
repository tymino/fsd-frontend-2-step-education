include ./nav-menu/nav-menu

- let isAuth = false
- let loginName = 'Юлий Цезарь'


header.header-container
  .header-container__logo
    +logotype()
  .header-container__wrapper
    .header-container__nav-menu
      +nav-menu()

    if isAuth
      .header-container__login= loginName
    else
      .header-container__buttons
        +buttons({
          type: 'button',
          text: 'войти',
          infotype: 'secondary',
          icon: false
        })
      .header-container__buttons
        +buttons({
          type: 'button',
          text: 'зарегистрироваться',
          infotype: 'primary',
          icon: false
        })